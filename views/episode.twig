{# contenu #}
{% block content %}
<div>
    <span class="h2">
        <small> {{ __("EPISODE") }} {{ episode.number }}  {{episode.title}} </small>
    </span>
    <span class="pull-right">
        {% set viewed = false %}
        {% for episodeViewed in user.episodesViewed %}
            {% if episodeViewed.toString() == episode._id.toString() %}
                {% set viewed = true %}
            {% endif %}
        {% endfor %}

        {% if viewed == true %}
            <button type="button" id="{{ episode._id }}" class="btn btn-success btn-xs viewed">
                <span class="episode-button" id="{{ episode._id }}-viewed-true">&#10003; {{ __("VIEWED_TRUE") }}</span>
                <span style="display:none" class="episode-button" id="{{ episode._id }}-viewed-false">{{ __("VIEWED_FALSE") }}</span>
            </button>
        {% else %}
            <button type="button" id="{{ episode._id }}" class="btn btn-warning btn-xs viewed">
                <span style="display:none" class="episode-button" id="{{ episode._id }}-viewed-true">&#10003; {{ __("VIEWED_TRUE") }}</span>
                <span class="episode-button" id="{{ episode._id }}-viewed-false">{{ __("VIEWED_FALSE") }}</span>
            </button>
        {% endif %}
    </span>
    <p>
        {{ episode.overview }}
    </p>
</div>
{% endblock %}